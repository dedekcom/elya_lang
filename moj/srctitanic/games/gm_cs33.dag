game Cs39Theend : StdGame	{
	init	{
		StdGame::init("cs39theend");
		
		.imgs = (A, "bgsky.pyz", "woda.pyzP 5", "kregi.pyzP 7", "lodz.pyzP 10", "lodka.pyzP 15",
			"pomost.pyz 20", "myler.pyz 22", "baba1.pyz 24", "baba2.pyz 26", "babka3.pyz 30",
			"gula.pyz 33", "szambelan.pyz 35", "gdas.pyz 38", "kokosz.pyz 40" ,"kajko.pyz 45",
			"dziura.pyzG 100", "koniec.pyzH 110");
		ankoniec.move(0,-100);
		new gmimgvec grels;
		grels.addlist(A, "anmyler", "anbaba1", "anbaba2", "anbabka3", "anszambelan");
		
		.sfxs = (A, "bgrmorze3N");
		mus.playstr("flety.ogg -v 70");
		
		.sounds = (A, "sndnar1", "Wbrew nadziejom wyspiarzy Soren nie wróci³ na tron ksiêstwa; Postanowi³ odp³yn±æ na bezludn± wyspê by wie¶æ ¿ywot pustelnika; Jego towarzyszem obok szczurka Lutka zosta³ Hodon który w niczym nie przypomina³ ju¿ dawnego butnego w³adcy", func { .cbplay("sndnar2"); grels.nplay(0); anlodka.play(1); },
			"sndnar2", "Kajko Kokosz i Gda¶ spêdzili jeszcze kilka wspania³ych dni na wyspie; Zaprzyja¼nili siê z mieszkañcami; Szczególnie polubili dzielnego Matiego", func { .cbplay("sndnar3"); timkurtyna.play; },
			"sndnar3", "A potem wyruszyli do ukochanego Mirmi³owa i ciotki Jagi która z utêsknieniem wyczekiwa³a powrotu kruka Gdasia",
			func { ankoniec.show; igmstate = 1; }
			);
		new img imlewy;
		string s = grdziura.get(0);
		imlewy.create( <s>.getpx, iResY, .black, 255);
		imlewy.setz(105);
		new img imgora;
		imgora.create( iResX, <s>.getpy, .black, 255);
		imgora.setz(105);
		s = grdziura.get(3);
		new img imprawy;
		imprawy.create( iResX-<s>.getex, iResY, .black, 255);
		imprawy.setpos( <s>.getex, 0 );
		imprawy.setz(105);
		new img imdol;
		imdol.create(iResX, iResY-<s>.getey, .black, 255);
		imdol.setpos( 0, <s>.getey);
		imdol.setz(105);
		s = grdziura.first;
		new int dt = 4;
		while(<s>.getex > 0 || <s>.getey > 0 )	{
			<grdziura.get(0)>.move(-dt,-dt);
			<grdziura.get(1)>.move(dt,-dt); 
			<grdziura.get(2)>.move(-dt,dt); 
			<grdziura.get(3)>.move(dt,dt); 
			imlewy.move(-dt,0);
			imprawy.move(dt,0);
			imgora.move(0,-dt);
			imdol.move(0,dt);
		}
		.cycle = ("timkurtyna", func {
			@s = grdziura.get(0);
			if( <s>.getpx < <s>.lodx )	{
				imlewy.move(dt,0);
				imgora.move(0,dt);
				imprawy.move(-dt,0);
				imdol.move(0,-dt);
				<grdziura.get(0)>.move(dt,dt);
				<grdziura.get(1)>.move(-dt,dt); 
				<grdziura.get(2)>.move(dt,-dt); 
				<grdziura.get(3)>.move(-dt,-dt); 
				.play;
			} else {
				mus.fadeout(1000);
				timkoniec.play;
			}
			} );
		.timer = ("timkoniec", 1000, func {
			mus.playstr("wyspa1.ogg");
			} );
		ccs.enter( func {
			.advgetscreenshoot;
			.cbplay("sndnar1");
			} );
	}
	mouse_lclick	{
		if( igmstate==1 ) {
			igmstate=2;
			mus.fadeout(1000);
			ccs.close( func { gameapi.play("MainMenu"); } );
		} else if (igmdebug)	{
			.cactsndstop(true);
		}
	}
}
