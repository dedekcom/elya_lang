	mouse_rclick	{
		if( igmstate==1 && grels.isin(mouse.getpos,1,1) )	{
			@s = <grels.getsfound>.actionname;
			if( s=="rybka" ) s="ryba";
			sndhelper.load(.getsndpath+"jaga_"+s+".wav");
			.crplay("sndhelper");
		}
	}
	schowajzak	{
		anzak.ansetbpos(-anzak.getw + 350, iResY - 200 );
		anzak.show;
	}
	_msndplay(string s)	{
		.load( "sounds/" + s + ".wav" );
		.play;
	}
