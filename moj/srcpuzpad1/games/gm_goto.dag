	mcheck	{
		igmstate = 1;
		@s = grsklad.get( grsklad.size - grels.size - 1 );
		<s>.setframe( <sskladnik>.actionname, 0 );
		<s>.show;
		<sskladnik>.hide;
		if( grels.size == 0 )	{
			igmstate = 4;
			.cbplay("kajko3");
		} else if (grels.size==4)	{
			igmstate = 4;
			.cbplay("kajko5");
		}
