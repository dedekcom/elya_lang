		delete _ansayzak1;
		delete _anzaklecie;
		_sndzak.stop(false);
		delete _sndzak;
		delete _dbelik;
		delete _selik;
		delete _ielik;
		
		_grelist.deleteallgm;
		_grelik.deleteallgm;
		delete _grelik;
		delete _grelist;
		
		delete _felik;
		
		.m_del_powrot;
		igmstate = 0;
