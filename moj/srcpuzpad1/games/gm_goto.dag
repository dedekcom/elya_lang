		ansubadvpowrot.move(90, 127);
	}
	m_del_powrot	{	delete ansubadvpowrot;	}
	m_on_powrot	{	ansubadvpowrot.isin(mouse.getpos,1,1);	}
	_m_out_elik	{
		if( _selik!=null )	{
			<_selik>.createtxt(.black);
			_selik = null;
		}
	}
	m_zaklecie_in	{ <gameapi.getgamename> {
