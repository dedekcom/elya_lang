			fxmachine2.play;
			timout.play;
		} else {
			anczytacz.play(0);
			s = <"txtz"+instr>.get;
			.viewst(instr);
			fxpik2.play;
			if( s=="?" ) .cbplay("sndrhm");
			else {
				.cbplay("sndr"+s);
			}
		}
	}
	dali	{
		anczytacz.stop(false);
		anczytacz.setframe(0,0);
		@s = <"txtz"+instr>.get;
		ankompi.play( s );
		if( s == "1" )	{<grtas.get(instr)>.show; fxtype.play;	}
		instr++;
