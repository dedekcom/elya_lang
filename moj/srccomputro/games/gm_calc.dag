	msetact(string s)	{
		.msetstd;
		scell = s;
		@r = <s>.row;
		@c = <s>.col;
		// tekst w wierszu
		im1.setpos(xstart, ystart+r*dy);
		im1.show;
		txtb16.txtset(r);
		txtb16.txtcenter("im1");
		txtb16.show;
