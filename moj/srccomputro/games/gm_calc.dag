	mprinton(int ir, int ic, int i, int j, string simg)	{
		string s3 = "txt"+i+"_"+j;
		if( j<=ic && i<ir )		.newtext(s3, dbc.get(i, j-1), stdfont16, .black);
		else .newtext(s3, "", stdfont16, .black);
		<s3>.setz(20);
		if( j==3 || j==5 || (i==0&&j==2))	{
			<s3>.txtright(simg);
			<s3>.move(-2,0);
		} else	<s3>.txtcenter(simg);
		<simg>.stekst = ( <s3>.get );
		<simg>.sformula = ( <s3>.get );
	}
