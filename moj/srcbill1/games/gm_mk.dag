				.hide;
				.cbplay("bari2");
				anbari4.play(0);
			}
			return;
		}
		@x = .fromcheti;
		@x2 = ihit + ancheti3.ihit;
		if( x<x2 ) {
			@id = 4->rand;
			if( id==0 )	.mgo("l");
			else if(id==1) .play("unik");
			else .play("hit");
		} else if( x <= x2+50 )	{
