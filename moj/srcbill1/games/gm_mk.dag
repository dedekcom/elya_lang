	mgo(string s)	{
		dir = s;
		.play("go");
	}
	framewoj	{
		@s;
		<mklive>.update;
		if( .isplaying("go") )	{
			if( dir=="l" )	{
				if( .getposx > borl ) .move(-speed,0);
			} else {
				if( .getposx < borr ) .move(speed,0);
			}
		} else if (.isplaying("hit") && .framename=="bum" )	{
			@x = .getpx+wojx;
			@y = .getpy+wojy;
