						mkch.refresh;
						mkw1.refresh;
						mkw2.refresh;
						anwoj1.setpos( anwoj1.borl, anwoj1.getposy );
						anwoj2.setpos( anwoj2.borl, anwoj2.getposy );
						ancheti3.setpos( ancheti3.borr, ancheti3.getposy );
						ancheti3.play("stand");
						anwoj1.play("stand");
						anwoj2.play("stand");
						}, func { igmstate = 1; } );
				}
			}
		}
	}
	framecheti	{
		@s;
		<mklive>.update;
		if( .isplaying("go") )	{
			if( dir=="l" )	{
				if( .getposx > borl ) .move(-speed,0);
			} else {
				if( .getposx < borr ) .move(speed,0);
			}
		} else if (.isplaying("hit") && .framename=="bum" )	{
			@x = .getpx+wojx;
			@y = .getpy+wojy;
			if( grwoj.isin(x,y,1,1) )	{
				@s2 = grwoj.getsfound;
				<"fxau"+(grwoj.getfound+1)>.playif;
				s = cntbum.get;
				<s>.setpos(x, y);
				<s>.play(0);
				bbum.play;
				.mdamage(s2, 10);
			}
		} else if (.isplaying("kick") && .framename=="bum" )	{
			@x = .getpx+wojx;
			@y = .getpy+wojy;
			if( grwoj.isin(x,y,1,1) )	{
				@s2 = grwoj.getsfound;
				<"fxau"+(grwoj.getfound+1)>.playif;
				s = cntbum.get;
				<s>.setpos(x, y);
				<s>.play(0);
				bbum.play;
				.mdamage(s2, 20);
			}
		}
	}
	mdamage(string s, int id)	{
		<s>.play("ups");
		string s2 = <s>.mklive;
		<s2>.damage(id);
		if( <s2>.lup )	{
			igmstate = 3;
			ancheti3.stop(false);
			anwoj1.stop(false);
			anwoj2.stop(false);
			anwoj1.play("stand");
			anwoj2.play("stand");
			ancheti3.play("stand");
			mkw1.end;
			mkw2.end;
			mkch.end;
			.cbplay("bari1");
		}
	}
	keyboard_keydown	{
		if( igmstate==1 )	{
			ancheti3.chetister;
		}
	}
