class mklive	{
	init(string s)	{
		new img im1;
		im1.setz(150);
		im1.create(100,6,.red,192);
		new string san = s;
		new img im2;
		im2.create(96,4,.green,255);
		im2.setz(160);
		new int damage = 0;
		<san>.var2("mklive", this);
	}
	update	{
		im1.setpos( <san>.getposx - im1.getw/2, <san>.getposy-250 );
		im2.setpos( im1.getpx+2, im1.getpy+1 );
		im2.move( -damage,0);
		im2.clip( im1.getpx+2, 0, im1.getex-2, iResY );
	}
	bool lup(int id)	{
		damage += id;
		.update;
		damage>=im2.getw;
	}
	refresh	{
		_ = .lup(-damage);
	}
	end	{
		im1.hide;
		im2.hide;
	}
}

