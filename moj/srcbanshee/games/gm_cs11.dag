				.gotoadv("adwieza", "gameadwieza1");
				} ); }
			);
		
		.sfxs = (A, "bgrout2N 70");
		
		ccs.enter( func {
			timcyk.play;
			.cbplay("sndnar1");
			} );
	}
	mouse_lclick	{
		if( igmdebug ) .cactsndstop(true);
	}
}

