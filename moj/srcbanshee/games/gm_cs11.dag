		.imgs = (A, "bg2.pyz", "glejt2.pyz 5", "mirmil2.pyzP 20", "kapral2.pyz 30");
		
		.newfont("fkapral", sgmfontitalic, 34);
		new db dbglejt;
		dbglejt.load("lang/glejt.db");
		new gmimgvec grtxt;
		for( int i=0; i<dbglejt.getrowsno; i++)	{
			@s = "txtg"+i;
			.newtext(s, dbglejt.get(i,0), "fkapral", .black);
			<s>.setz(10);
			<s>.setpos( anglejt2.getcx - <s>.getw/2, anglejt2.getpy + 120 + 2*<s>.geth*i );
			grtxt.add(s);
		}
		grtxt.add("anglejt2");
		grtxt.move(100, 300);
		.cycle = ("timcyk", func {
			if( anglejt2.getposx>0 )	{
				grtxt.move(-1,-3);
				.play;
			} else ankapral2.play(-1);
			} );
		
		.sounds = (A, "sndnar1", "Jak powiedzia³ tak uczyni³; Mirmi³ rozpozna³ pismo Kokosza i zezwoli³ kapralowi przebywaæ w grodzie; Ufny w spryt Kajka i Kokosza wkrótce wróci³ do swych zajêæ i zostawi³ kaprala bez opieki kontrwywiadowczej",
