
class clmiotla {
	init(string s)	{
		new int irow = dbter.findbyrow(s);
		new int icol = 0;
		new int icols = (irow>=0 ? dbter.getcolsno(irow) : 0);
	}
	next	{
		int id = dbter.get(irow, icol);
		icol = (icol+1)%icols;
		id;
	}
}

