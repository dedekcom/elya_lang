	moutptak(int id, int tor)	{
		if( id )	{
			@s = <"ctp"+id>.get;
			<s>.ansetbpos( iResX + 100->rand, tor*(iResY-dolnyprog)/4 + 20 - 41->rand );
			<s>.play(0);
			iptaszyle++;
		}
	}
	loadptak(int id)	{
		.newanima("anptak"+id, "ptak"+id+".pyz", ankk.getz);
		<"anptak"+id>.hide;
		@s = "grp"+id;
		new gmimgvec <s>;
		@ile = 40;
		<s>.ancopies("anptak"+id, ile);
		<s>.eval( func {
			.var2("iptak", this->strsubbs("anptak")->to_i);
			// golab, mewa, orzel, szary, pelikan, ges
			match(iptak)	{
				1,4 => "fxgolab1";
				2 => "fxmewa1";
				3 => "fxorzel1";
				5 => "fxpelikan1";
				6 => "fxges1";
				? => ;
			}
			@sptak = _;
			.var2("sfxptak", sptak);
			
			.addmethod("onfinish", func {
					.play(0);
				});
			.addmethod("onendframe", func {
				@x1 = .getex;
 				.move( -vptak.get(iptak-1), 0 );
 				@x2 = .getex;
 				if( x1 >= iResX && x2 < iResX )	{
					<sfxptak>.playif;
 				}
 				if( x2 < 0 )	{
					iptaszyle--;
					if( iptaszyle<=1 && idptak >= dbptak.getrowsno && igmstate==1)	{
						.kosay(4);
						igmstate = 2;
					}
					.stop(false);
					.hide;
 				} else {
					@dh = .geth/4;
					if( .mbum(.getpx, .getcy) ) {}
					else if( .mbum(.getcx, .getcy+dh) ) {}
					else if( .mbum(.getcx, .getey-dh) ) {}
					else if( .mbum(.getcx, .getcy) ) {}
 				}
				});
			} );
		new classancounter <"ctp"+id>;
		<"ctp"+id>.set("anptak"+id+"_",ile);
	}
	mbum(int x, int y)	{
		if( .actionnr(-1)==0 && ankk.isin(x,y,1,1) )	{
			@s = ctbum.get;
			<s>.setpos(x,y);
			<s>.play(0);
			<sfxptak>.playif;
			fxhit1.play;
			if( !clive.destroyed ) {
				clive.damage( vpdamage.get(iptak-1) );
				if( clive.destroyed )	{
					igmstate = 2;
					.cbplay("kajko5");
					ankk.play("spada1");
				} else if( 3->rand==0 )	{
					.crplay("kokosz"+(6->rand+6));
				}
			}
			.play(1);
			1;
		} else 0;
	}
	loadtasma(string st, int ile, int cykl, real rmov)	{
		new int <"ic"+st> = cykl;
		
		string s0;
		
		new clmiotla <"clm"+st>(st);
		
		s0 = "gr"+st;
		new gmimgvec <s0>;
		<s0>.ancopies("an"+st, ile);
		
		s0 = "ct"+st;
		new classancounter <s0>;
		<s0>.set( "an"+st+"_", ile );
		
		new AnMover <"cm"+st>("gr"+st, -rmov, 0);
	}
	mcyk	{
		icykler = (icykler+1)%icyklimit;
		.mnext("gory1");
		.mnext("chmury2");
		.mnext("chmury3");
		.mnext("drzewa");
		.mnext("drzewa2");
		.mnext("drzewa3");
	}
	mnext(string st)	{
		<"cm"+st>.move;
		int ic = ["ic"+st];
		if( icykler%ic==0 )	{
			ic = <"clm"+st>.next;
			if( ic ) {
				ic--;
				@s = <"ct"+st>.get;
				<s>.show;
				<s>.setframe(ic,0);
				<s>.setpos(iResX-<s>.lodx, 0);
			}
		}
	}
	csky1_finish	{
		if( anniebo.getex<=0 )	{
			.reset;
			csky2.reset;
			anniebo.setpos(0,0);
			anniebo2.setpos(anniebo.getex,0);
		}
	}
