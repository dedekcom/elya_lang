  init_cross(string name, int x,int y)
  {
      <"an"+name>(name, x,y){(string name, int x, int y)
        
        .vars2(A,"name", name, "start_x",<"an"+name>.getposx, "start_y", <"an"+name>.getposy);
         .addmethod("isbutin", func { (@x, @y)
    			 .isin(x,y,0,0) && clsave.bis("e1_drzwi_krzyze_uzyte");
    			} );   
        .addmethod("butmoveon", func {
    				if( !.advstdstate ) return;
    				advmouse.set("take");
            .play(1);
             
    				} );
    			.addmethod("butmoveoff", func {
    				if( !.advstdstate  ) return;
    				advmouse.setstd;
            .play(0);
    				} ); 
        .addmethod("butclick", func {
          
          if( !.advstdstate || .is_mg_finished()) return;
           
          if (act_id == "null")
          {
            act_id = this;
            fxbutmoveon3.play;
            .setz(300);
            .play(2); 
            .setpos(mouse.getpos);
            advmouse.setstd;
          }
          else if(act_id == this)
          { 
            @slot = "anslot"+.name;
            if (act_id == "an6" && !clsave.bis("e1_mg20_zaslepka_removed") && slot == "anslot6")
            {
               act_id = "null";
              .play(0);
              .setpos(.start_x,.start_y) ; 
              fxbook2.play;
              .setz(2);
              advmouse.setstd;   
              return;
            }
             
            if (<slot>.isin(mouse.getpos,0,1)  )
            {
              if (<slot>.isvisible)
              { 
                <slot>.play(2);
                <slot>.anfadein(100,null);
                fxbook2.play;
                clsave.bset("e1_mg20_drzwi_"+.name+"_inserted" );
                .hide();
                .check_won();  
                .check_finish();  
                }
                else
                {
                  .play(0);
                  .setpos(.start_x,.start_y) ; 
                  fxbook2.play;
                  .setz(2); 
                
                }
                  
            }
            else
            { 
              .play(0);
              .setpos(.start_x,.start_y) ; 
              fxbook2.play;
              .setz(2); 
            }
            act_id = "null";
            advmouse.setstd;
          }
          butgame.sort; 
          .advsetstdstate;
        } );
        butgame.add(this);
      };
  } 
  
  check_all_done()
  {
    for(int i=1;i<6;i++)
    {
      if (<"anslot"+i>.actionnr(-1) != 2)
        return false;
    }  
    return true;
  }
  
  check_won()
  {
    if (.check_all_done())
    {
      if(!clsave.bis("e1_mg20_pierwsza_faza" ))
      {
        anzaslepka_glow.anfadein(1500,func{anzaslepka_glow.anfadeout(1500,func{.advsetstdstate;});}); 
        clsave.bset("e1_mg20_pierwsza_faza" );
      }    
    }
  }
  
  check_finish()
  {
    if ( clsave.bis("e1_mg20_drzwi_6_inserted" )) 
    {
      .set_mg_finished();
      andoor_open.anfadein(500,null);
      .timfinito;  
    
    }
     
  }
  
  anim_slot{
    if (!clsave.bis("e1_mg20_drzwi_"+act_slotanim+"_inserted" )) 
        <"anslot"+act_slotanim>.anfadein(1500,func{<"anslot"+act_slotanim>.play(0);});  
    else
      .find_next_slot;        
    
  }
  
  find_next_slot{
  
  if (act_slotanim < 5) 
    act_slotanim++ ;
  else
    act_slotanim = 1;
  .anim_slot;
  
  }
  
  mouse_move	{
	  if (act_id != "null")
    {
      <act_id>.setpos(mouse.getpos);
      <act_id>.play(2);
    }
	}
    
  mend	{ 
    if (.is_mg_finished) 
      .stdexitdefadv("ad21_holglowny", "gamead21_holglowny0");
    else 
    .stdexitdefadv("ad20_zamekdrzewo", "gamead20_zamekdrzewo0");
	}
  
  HINT_CLICK {
