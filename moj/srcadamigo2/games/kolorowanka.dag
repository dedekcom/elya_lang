					} );
// 			vkolory.print;
			//grpaleta.each( func { (@id) .paint( .getrgba( .getcx, .getcy ), 0 ); } );	// jednolity kolor
			}
			new Color color {
				.img = (grpaleta.get(0));
				a = 255;
				anbrush2.paint( .get, 0 );
				.var2("framenr", <grpaleta.get(0)>.framenr );
			};
			grdraw.each( func { (@id) .var2("colored", -1); } );
