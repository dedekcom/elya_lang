game gameoutro : classadvadamigo2 {
	init	{
		classadvadamigo2::init;
		.path =("outro");
		new gmimgvec grbg;
		"grbg" ..< "bgs.pyz";
		.img = ("titles.pyz");
		new @idtit = 0;
		new @Ile = 0;
		new @Id = 0;
		new gmimgvec grim;
		string s;
		for( int i=0; i<11; i++)	{
			s = "img"+i;
			new img <s>;
			grim.add(s);
		}
		.newdb("dbl","pos.db");
		new classfadeinout clf;
		.cnewtimerfin("timcyk", 1000, 1, "fintim");
		.view;
	}
	fintim	{
		clf.imgtransparency(1, -5, "img"+Id, "next");
	}
	next	{
		@s = "img"+Id;
		<s>.transparency(255);
		<s>.hide;
		Id++;
		if( Id==Ile )	.view;
		else	timcyk.play;
	}
	view	{
		if( idtit==antitles.nofframes(0) )	.endintro;
		else {
			grim.hide;
			string s;
			Ile = (dbl.getcolsno(idtit) - 1)/3;
			Id = 0;
			for( int i=0; i< Ile; i++)	{
				s = "img"+i;
				<s>.load("scripts/outro/o"+(idtit+1)+"_"+i+".png");
				<s>.setpos( dbl.get(idtit, 3*i + 2), dbl.get(idtit, 3*i + 3) );
				<s>.show;
				<s>.setz(20-i);
			}
			antitles.setframe(0,idtit);
			idtit++;
			timcyk.play;
		}
	}
	endintro		{	gameapi.play("exit");	}
	mouselclick	{
		.endintro;
	}
}
