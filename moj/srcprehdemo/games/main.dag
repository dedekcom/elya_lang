		match( gameapi.getgamename() )	{
			"gamemenu" => "gameoutro";
			"MenuPreh" => "Outro" + LANG;
			? => sAskerGame;
		}
		gameapi.play;
	}
	mnorestart()	{
		match(gameapi.getgamename)	{
			"Memo" => "gamemenu";
			? => "gamemenu";
		}
		gameapi.play;
	}
	myesrestart()	{	this.crestart();	}
}

